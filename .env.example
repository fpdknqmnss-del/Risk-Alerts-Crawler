# ===== Application =====
APP_ENV=development
DEBUG=true
SECRET_KEY=change-me-to-a-random-secret-key

# ===== Database (PostgreSQL + PostGIS) =====
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=riskalerts
POSTGRES_PASSWORD=riskalerts_dev_password
POSTGRES_DB=riskalerts
DATABASE_URL=postgresql+asyncpg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===== Redis =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0

# ===== Auth (JWT) =====
JWT_SECRET_KEY=change-me-to-a-random-jwt-secret
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===== LLM Provider =====
LLM_PROVIDER=openai
LLM_MODEL=gpt-4o
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OLLAMA_BASE_URL=http://ollama:11434
LLM_REQUEST_TIMEOUT_SECONDS=30
DEDUP_SIMILARITY_THRESHOLD=0.9
DEDUP_EMBEDDING_DIMENSIONS=256
DEDUP_ALERT_LOOKBACK_HOURS=72

# ===== News Source API Keys =====
NEWSAPI_KEY=
GDELT_BASE_URL=https://api.gdeltproject.org/api/v2
RELIEFWEB_BASE_URL=https://api.reliefweb.int/v1
USGS_EARTHQUAKE_FEED_URL=https://earthquake.usgs.gov/earthquakes/feed/v1.0/summary/all_day.geojson
RSS_FEED_URLS=https://www.reutersagency.com/feed/?best-topics=natural-disasters,https://feeds.bbci.co.uk/news/world/rss.xml
REQUEST_TIMEOUT_SECONDS=20
NEWS_FETCH_INTERVAL_MINUTES=5
ENABLE_NEWS_SCHEDULER=true

# ===== Email (SMTP) =====
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=alerts@example.com
SENDGRID_API_KEY=

# ===== Celery =====
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/2

# ===== Frontend =====
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000/ws
